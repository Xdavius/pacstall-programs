#!/bin/bash -ex
# Highly opinionated wrapper for Debian/Ubuntu Linux packaging

exec meson setup \
  --prefix        /usr \
  --libexecdir    lib/x86_64-linux-gnu \
  --sbindir       sbin \
  --buildtype     plain \
  --auto-features enabled \
  --wrap-mode     nodownload \
  -D              b_pie=true \
  -D              python.bytecompile=1 \
  "$@"
